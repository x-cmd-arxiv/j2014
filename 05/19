ctural realism.\n","versions":[{"version":"v1","created":"Mon, 19 May 2014 15:43:36 GMT"},{"version":"v2","created":"Tue, 12 Aug 2014 17:52:42 GMT"},{"version":"v3","created":"Fri, 28 Nov 2014 10:27:05 GMT"}],"update_date":"2014-12-01"}
