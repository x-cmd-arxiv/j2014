 $\\omega$.\n","versions":[{"version":"v1","created":"Thu, 25 Sep 2014 18:41:17 GMT"},{"version":"v2","created":"Mon, 1 Dec 2014 23:32:08 GMT"},{"version":"v3","created":"Sun, 18 Jan 2015 10:55:16 GMT"}],"update_date":"2015-02-19"}
