ational cost.\n","versions":[{"version":"v1","created":"Sat, 12 Jul 2014 02:02:42 GMT"},{"version":"v2","created":"Tue, 15 Jul 2014 04:30:45 GMT"},{"version":"v3","created":"Tue, 25 Nov 2014 08:58:07 GMT"},{"version":"v4","created":"Tue, 14 Apr 2015 02:53:27 GMT"},{"version":"v5","created":"Fri, 15 May 2015 00:42:56 GMT"},{"version":"v6","created":"Tue, 16 Jun 2015 04:52:23 GMT"}],"update_date":"2015-06-17"}
